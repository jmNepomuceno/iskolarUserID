<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/sort.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>ISKOLAR | Sort</title>
</head>
<body>
    <!-- <h1>try nepo, try again</h1> -->
    <header class="sub-header">
        <img id="iskolar-logo" src="/css/imgs/iskolar_logo.png">
        <label>ISKOLAR NG BATAAN</label>
        <img id="bataan-logo" src="/css/imgs/bataan_logo.png">
    </header>

    <section class="sort-section">
        <div action="/sort" method="GET" class="sort-side-section">
            <form class="sort-form" autocomplete="off">

                <select name="column_header" id="sort-column">
                    <option value="Last_Name">Last Name</option>
                    <option value="First_Name">First Name</option>
                    <option value="Middle_Name">Middle Name</option>
                    <option value="user_id">User ID</option>
                </select>

                <select name="category" id="sort-category">
                    <option value="a_z">A-Z</option>
                    <option value="z_a">Z-A</option>
                    <option value="1_n">1-N</option>
                    <option value="n_1">N-1</option>
                </select>

                <button type="submit" class="btn btn-success" id="sort-btn">Sort</button>
            </form>
        </div>

        <section class="sort-body-section">
            <div class="sub-section">

                <div class="last-name-column">
                    <label id="title-col">Last Name</label>
                    
                    <!-- De , Dela , Delos, San -->
                    <% for(let i = 0; i < student_lists.length; i++){ %>
                        <label class="last-name-rows"> 
                            <% var two_surnames = ["DE", "DEL" , "DELA" , "DELOS", "SAN"]; %>
                            <% let prev_key, prev_prev_key %>
                            <% if(two_surnames.includes(student_lists[i].last_name)) {%>
                                <%= student_lists[i].last_name %> <%= student_lists[i].first_name%>
                            <%}else{ %>
                                <%= student_lists[i].last_name %>
                            <% } %>
                        </label>
                    <% } %>

                </div>

                <div class="first-name-column">
                    <label id="title-col">First Name</label>

                    <% for(let i = 0; i < student_lists.length; i++){ %>
                        <label class="first-name-rows">
                            <% var two_middlenames = ["DE", "DEL" , "DELA" , "DELOS", "SAN"]; %>
                            <% var two_surnames = ["DE", "DEL" , "DELA" , "DELOS", "SAN"]; %>
                            <% var start %>
                            <% if(two_surnames.includes(student_lists[i].last_name)) {%>
                                <% start = 2 %>
                            <%}else{ %>
                                <% start = 1 %>
                            <% } %>

                            <% for (let [key, value] of Object.entries(student_lists[i])) {%>
                                <% if(key == 'id'){%>
                                    <% break%>
                                <% }%>
                                <% prev_key = key%>
                            <% }%>

                            <% for (let [key, value] of Object.entries(student_lists[i])) {%>
                                <% if(key == prev_key){%>
                                    <% break%>
                                <% }%>
                                <% prev_prev_key = key%>
                            <% }%>

                            <% if(!two_middlenames.includes(student_lists[i][prev_prev_key])){ %>
                                <% prev_prev_key = '' %>
                            <%} %>

                            <% let j = 0 %>
                            <% let start_key, end_key %>
                            <% for (let [key, value] of Object.entries(student_lists[i])) {%>
                                <% if(j == start){ %>
                                    <% start_key = key %>
                                <%}%>
                                
                                <% if(key == prev_prev_key || key == prev_key){ %>
                                    
                                    <% break %>
                                <% } %>
                                <% end_key = key %>
                                <% j++ %>
                            <% }%>
                            <%if(start_key == end_key){%>
                                <%= student_lists[i][start_key]%> 
                            <%}else{%>
                                <%= student_lists[i][start_key] %> <%= student_lists[i][end_key] %> 
                            <%}%>
                        </label>
                    <% } %>

                </div>

                <div class="middle-name-column">
                    <label id="title-col">Middle Name</label>

                    <% for(let i = 0; i < student_lists.length; i++){ %>
                        <label class="middle-name-rows">
                            
                            
                            <% for (let [key, value] of Object.entries(student_lists[i])) {%>
                                <% if(key == 'id'){%>
                                    <% break%>
                                <% }%>
                                <% prev_key = key%>
                            <% }%>

                            <% for (let [key, value] of Object.entries(student_lists[i])) {%>
                                <% if(key == prev_key){%>
                                    <% break%>
                                <% }%>
                                <% prev_prev_key = key%>
                            <% }%>
                            
                            <% if(two_middlenames.includes(student_lists[i][prev_prev_key])){ %>
                                <%= student_lists[i][prev_prev_key] %> <%= student_lists[i][prev_key] %>
                            <%}else{ %>
                                <%= student_lists[i][prev_key] %>
                            <%} %>
                        </label>
                    <% } %>

                </div>

                <div class="user-id-column">
                    <label id="title-col">User ID</label>

                    <% for(let i = 0; i < student_lists.length; i++){ %>
                        <label class="user-id-rows"> <%= student_lists[i].id %></label>
                    <% } %>
                </div>
            </div>
        </section>
    </section>

    <footer>
        <div class="fb-link">
            <img src="/css/imgs/facebook.png" id="fb-logo">
            <a href="https://www.facebook.com/iskolar" id="fb-word">facebook.com/iskolar</a>
        </div>

        <div class="website-link">
            <img src="/css/imgs/world-wide-web.png" id="website-logo">
            <a href="https://www.bataan.gov.ph/education/iskolar-ng-bataan/" id="website-word">swww.bataan.gov.ph/education/iskolar-ng-bataan/</a>
        </div>

        <div class="quote">
            <p>
                "To produce a minimum of one professional child in every household
                in the province and be gainfully employed in the trade and industries who
                invested in Bataan or even Outside Bataan."
            </p>
        </div>
    </footer>

    <script type="text/javascript" src="/js/sort.js" ></script>
</body>
</html>